{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "standard",
        "plugin:jest/recommended",
        "plugin:react/recommended",
        "plugin:flowtype/recommended",
        "plugin:prettier/recommended",
        "prettier/flowtype",
        "prettier/react",
        "prettier/standard"
    ],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": [
        "react-hooks",
        "flowtype"
    ],
    "rules": {
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "error",
        "prettier/prettier": [
            "error",
            {
                "semi": false,
                "trailingComma": "none",
                "singleQuote": true
            }
        ]
    },
    "settings": {
        "react": {
            "version": "detect",
            "flowVersion": "detect"
        }
    }
}